{
    "files.associations": {
        "dryadsfile": "python" // dryads support
    },
    "editor.formatOnSave": true,
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
    },
    "mypy-type-checker.args": [
        "--check-untyped-defs",
    ],
    "isort.args": [
        "--profile",
        "black",
    ],
}